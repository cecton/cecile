#!/bin/bash

xsetroot -solid black
xset -dpms -b
xset s off
xset +fp /usr/share/fonts/local
xset fp rehash
xrdb -load $HOME/.Xresources
setxkbmap -option caps:none -layout us -variant dvp
xmodmap - <<EOF
keysym Menu = Control_R
add Control = Control_R
EOF
/home/cecile/bin/xrandr-auto
xhost +local:

function autostart
{
	[ -f ".fehbg" ] && . .fehbg
	redshift -l 50.72:4.86 -t 6500:3600 -g 0.9 -m vidmode &
	[ -z "`ps -C rygel -o user,pid --no-headers | grep \"^$USER\>\"`" ] && dtach -n /tmp/rygel.$USER rygel
	pulseaudio -D
}

cd
autostart &
cd -

